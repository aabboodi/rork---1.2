{
  "moderate": true,
  "high": true,
  "critical": true,
  "allowlist": [],
  "report-type": "full",
  "retry": {
    "count": 5,
    "factor": 2,
    "minTimeout": 10000,
    "maxTimeout": 60000,
    "randomize": true
  },
  "skip-dev": false,
  "whitelist": [],
  "advisories": [],
  "path-whitelist": [],
  "show-found": true,
  "show-not-found": false,
  "registry": "https://registry.npmjs.org/",
  "output-format": "json",
  "summary": true,
  "pass-enoaudit": false,
  "package-manager": "npm",
  "levels": {
    "low": false,
    "moderate": true,
    "high": true,
    "critical": true
  },
  "pentest-integration": {
    "enabled": true,
    "owasp-zap": {
      "enabled": true,
      "baseline-scan": true,
      "full-scan": false,
      "api-scan": true,
      "report-format": ["json", "html"]
    },
    "burp-suite": {
      "enabled": true,
      "crawl-and-audit": true,
      "extension-scan": false,
      "report-format": ["json", "html"]
    },
    "quarterly-assessment": {
      "enabled": true,
      "compliance-frameworks": ["OWASP Top 10", "PCI DSS", "SOC 2"],
      "automated-reporting": true
    }
  },
  "compliance": {
    "frameworks": {
      "owasp-top-10": {
        "enabled": true,
        "version": "2021",
        "checks": [
          "A01:2021 – Broken Access Control",
          "A02:2021 – Cryptographic Failures", 
          "A03:2021 – Injection",
          "A04:2021 – Insecure Design",
          "A05:2021 – Security Misconfiguration",
          "A06:2021 – Vulnerable and Outdated Components",
          "A07:2021 – Identification and Authentication Failures",
          "A08:2021 – Software and Data Integrity Failures",
          "A09:2021 – Security Logging and Monitoring Failures",
          "A10:2021 – Server-Side Request Forgery"
        ]
      },
      "pci-dss": {
        "enabled": true,
        "version": "4.0",
        "requirements": [
          "Install and maintain network security controls",
          "Apply secure configurations to all system components",
          "Protect stored account data",
          "Protect cardholder data with strong cryptography during transmission",
          "Protect all systems and networks from malicious software",
          "Develop and maintain secure systems and software"
        ]
      },
      "soc-2": {
        "enabled": true,
        "criteria": [
          "Security",
          "Availability", 
          "Processing Integrity",
          "Confidentiality",
          "Privacy"
        ]
      }
    }
  },
  "secure-enclave": {
    "enabled": true,
    "keychain-protection": true,
    "hardware-key-storage": true,
    "biometric-protection": true,
    "checks": [
      "Verify Secure Enclave usage for sensitive keys",
      "Check Keychain/Keystore integration",
      "Validate hardware-backed key storage",
      "Ensure biometric protection for critical operations"
    ]
  },
  "vulnerability-management": {
    "automated-scanning": true,
    "real-time-monitoring": true,
    "threat-intelligence": true,
    "incident-response": true,
    "remediation-tracking": true
  },
  "reporting": {
    "formats": ["json", "html", "xml", "csv"],
    "destinations": ["file", "email", "webhook"],
    "schedule": {
      "daily": false,
      "weekly": true,
      "monthly": true,
      "quarterly": true
    },
    "executive-summary": true,
    "technical-details": true,
    "compliance-status": true,
    "trend-analysis": true
  }
}